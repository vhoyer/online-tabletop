{
  "version": 1,
  "name": "Solitaire",
  "config": {
    "what": {
      "type": "string[]",
      "default": ["string[]"]
    }
  },
  "create": [
    "define template Card card @next",
    {
      "template": [
        "<div style='font-size:2rem; font-weight:bold; position: absolute; inset: 8px; text-align: left;'>${value}</div>",
        "<div style='font-size:2rem; font-weight:bold; position: absolute; inset: 8px; text-align: left; transform: rotate(180deg)'>${value}</div>",
        "<div style='font-size:8rem; font-weight:bold'>${value}</div>"
      ]
    },

    "define object Deck deck",
    "for_in suit @next @next",
    ["♣", "♦", "♥", "♠"],
    [
      "for_in number 1..10 @next",
      [
        "add_to_deck Deck Card @next", { "value": "${suit}${number}" },
        null
      ],
      "add_to_deck Deck Card @next", { "value": "${suit}J" },
      "add_to_deck Deck Card @next", { "value": "${suit}Q" },
      "add_to_deck Deck Card @next", { "value": "${suit}K" },
      null
    ],

    "define pile PileDraw",
    "define pile PileDead",

    "define pile PileDiamonds",
    "define pile PileHearts",
    "define pile PileClubs",
    "define pile PileSpades",

    "define pile PileOne   @next", { "spread": "down" },
    "define pile PileTwo   @next", { "spread": "down" },
    "define pile PileThree @next", { "spread": "down" },
    "define pile PileFour  @next", { "spread": "down" },
    "define pile PileFive  @next", { "spread": "down" },
    "define pile PileSix   @next", { "spread": "down" },
    "define pile PileSeven @next", { "spread": "down" },
    null
  ],
  "setup": [
    "shuffle Deck",
    null
  ]
}
